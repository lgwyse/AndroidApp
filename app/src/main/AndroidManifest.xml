<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.medpasshealth.myapplication" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/medpass_logo_blue"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LifeActivity"
            android:label="  " >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="  "
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name=".Register"
            android:label="@string/register"
            android:parentActivityName=".LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.medpasshealth.myapplication.LoginActivity" />
        </activity>
        <activity
            android:name=".CreatePassword"
            android:label="@string/title_activity_create_password" >
        </activity>
        <activity
            android:name=".AccountManage"
            android:label="@string/title_activity_account_manage" >
        </activity>
        <activity
            android:name=".PersonalContact"
            android:label="@string/title_activity_emergency_contact" >
        </activity>
        <activity
            android:name=".ContactInfo"
            android:label="@string/title_activity_contact_info" >
        </activity>
        <activity
            android:name=".MedHistory"
            android:label="@string/title_activity_med_history" >
        </activity>
        <activity
            android:name=".VerifyIdentity"
            android:label="@string/title_activity_verify_identity" >
        </activity>
        <activity
            android:name=".RecoverPassword"
            android:label="@string/title_activity_recover_password" >
        </activity>
    </application>

</manifest>
